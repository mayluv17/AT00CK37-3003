{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha --recursive --exit",
    "coverage": "c8 --reporter=lcov --reporter=text mocha --recursive --exit",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "coverage:check": "c8 check-coverage --lines 60 --functions 60 --branches 60"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "coveralls": "^3.1.1",
    "mocha": "^11.7.5",
    "nyc": "^15.1.0"
  },
  "c8": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/.internal/**",
      "test/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "report-dir": "./coverage"
  }
}
